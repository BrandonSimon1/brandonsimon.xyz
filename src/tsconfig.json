{
    "compilerOptions": {
        "jsx": "react",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2015",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom"
        ]
    },
    "include": [
        "**/*"
    ]
}